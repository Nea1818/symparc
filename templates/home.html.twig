{% extends 'base.html.twig' %} {% block title %}SymPARC{% endblock %} {% block
body %}

<main role="main">
  <div class="jumbotron">
    <div class="container">
      <div class="row mt-5 mb-2">
        <div class="col-md-5">
          <h1 class="display-4">
            Les plus jolis parcs et jardins de Paris!
          </h1>
          <br />
          <p>
            SymPARC vous propose de d√©couvrir les parcs et jardins de notre
            capitale en fonction de leur arrondissement.
          </p>
          <hr />
          <a
            class="btn btn-success btn-lg"
            href="{{ path('home') }}"
            role="button"
            >Voir la liste &raquo;</a
          >
        </div>
        <div class="col-md-7">
          <div
            id="carouselExampleControls"
            class="carousel slide"
            data-ride="carousel"
          >
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img
                  class="d-block w-100"
                  src="../img/parc1.jpg"
                  alt="First slide"
                />
              </div>
              <div class="carousel-item">
                <img
                  class="d-block w-100"
                  src="../img/parc2.jpg"
                  alt="Second slide"
                />
              </div>
              <div class="carousel-item">
                <img
                  class="d-block w-100"
                  src="../img/parc3.jpg"
                  alt="Third slide"
                />
              </div>
            </div>
            <a
              class="carousel-control-prev"
              href="#carouselExampleControls"
              role="button"
              data-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Previous</span>
            </a>
            <a
              class="carousel-control-next"
              href="#carouselExampleControls"
              role="button"
              data-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- /container -->
</main>

{% endblock %}
