{% extends 'base.html.twig' %} {% block title %}{{ parc.name }}{% endblock %} {%
block body %}

<div class="container">
  <div class="row mt-5">
    <div class="col-md-7">
      {% if parc.pictures %}
      <div
        id="carouselExampleIndicators"
        class="carousel slide"
        data-interval="false"
        data-ride="carousel"
        data-pause="hover"
      >
        <ol class="carousel-indicators">
          {% for picture in parc.pictures %}
          <li
            data-target="#carouselExampleIndicators"
            data-slide-to="{{ loop.index0 }}"
            {%
            if
            loop.first
            %}
            class="active"
            {%
            endif
            %}
          ></li>
          {% endfor %}
        </ol>
        <div class="carousel-inner">
          {% for picture in parc.pictures %}
          <div class="carousel-item {% if loop.first %} active {% endif %}">
            <img
              src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('medium') }}"
              class="d-block w-100"
              alt="First slide"
              style="width: 500px; height: 400px;"
            />
            <div class="carousel-caption d-none d-md-block">
              <p>Légende</p>
            </div>
          </div>
          {% endfor %}
        </div>
        <a
          class="carousel-control-prev"
          href="#carouselExampleIndicators"
          role="button"
          data-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Précédent</span>
        </a>
        <a
          class="carousel-control-next"
          href="#carouselExampleIndicators"
          role="button"
          data-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Suivant</span>
        </a>
      </div>
      {% else %}
      <img
        src="{{ '/images/empty.jpg' | imagine_filter('thumb') }}"
        alt="card-img-top"
        style="width: 100%; height: auto"
      />
      {% endif %}
    </div>
    <div class="col-md-5">
      <h2>
        {{ parc.name }}
      </h2>
      <p>
        {{ parc.introduction }}
      </p>
    </div>
    <div class="container my-4">
      <hr />
      <div class="row">
        <div class="col-md-7">
          <h2 class="my-3">Description</h2>
          {{ parc.description }}
        </div>
        <div class="col-md-5">
          <h2 class="my-3">Localisation</h2>
          <div
            id="map"
            style="width: 100%; height: 330px"
            data-lat="{{ parc.lat }}"
            data-lng="{{ parc.lng }}"
          ></div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
