{% extends 'base.html.twig' %} {% block title %}Liste des espaces verts
parisiens{% endblock %} {% block body %}

<div class="jumbotron">
  <div class="container">
    <h2 class="my-4">Trouvez un espace vert pr√®s de chez vous...</h2>
    {{ form_start(form) }}
    <div class="form-row align-items-end">
      <div class="col">
        <div class="form-group">
          <input
            type="text"
            id="search_address"
            class="form-control"
            value=""
            placeholder="Localisation..."
          />
        </div>
      </div>
      <div class="col">
        {{ form_row(form.distance) }}
      </div>
      <div class="col">
        <div class="form-group">
          <button class="btn btn-success">Rechercher</button>
        </div>
      </div>
    </div>
    {{ form_end(form) }}
  </div>
</div>
<div class="container">
  <div class="row mt-4">
    <div class="col">
      <div class="row flex">
        {% for parc in parcs %}
        <div class="col-md-6">
          <div class="card bg-light mb-3">
            <a href="{{ path('parcs.show', { id: parc.id, slug: parc.slug }) }}"
              >{% if parc.picture %}
              <img
                src="{{ vich_uploader_asset(parc.picture, 'imageFile') | imagine_filter('thumb') }}"
                alt="card-img-top"
                style="width: 100%; height: auto"
              />
              {% else %}
              <img
                src="{{ '/images/empty.jpg' | imagine_filter('thumb') }}"
                alt="card-img-top"
                style="width: 100%; height: auto"
              />
              {% endif %}
            </a>
            <div class="card-body">
              <h5 class="title">
                <a
                  href="{{
                    path('parcs.show', { id: parc.id, slug: parc.slug })
                  }}"
                  >{{ parc.name }}</a
                >
              </h5>
              ><br />
              <small>{{ parc.postalCode }}</small>
              <p class="card-text">
                {{ parc.introduction }}
              </p>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="pagination">
    {{ knp_pagination_render(parcs) }}
  </div>
</div>
{% endblock %}
