{% extends 'base.html.twig' %} {% block title %}Edition des annonces{% endblock
%} {% block body %} {% form_theme form _self %}

<div class="container">
  <h1 class="my-5">Modifier l'annonce: {{ parc.name }}</h1>

  {{ form_start(form) }}

  <div class="row">
    <div class="col">
      <div class="alert alert-light">
        <h2>Informations générales</h2>
        <hr />
        {{ form_row(form.name) }}
        {{ form_row(form.slug) }}
      </div>
    </div>
    <div class="col">
      <div class="alert alert-light">
        <h2>Images de l'annonce</h2>
        <hr />
        {{ form_row(form.pictureFiles) }}
      </div>
    </div>
      <div class="alert alert-light">
        <h2>Détails de l'annonce</h2>
        <hr />
        {{ form_row(form.introduction) }}
        {{ form_row(form.description) }}
      </div>
    </div>
  </div>

  <div class="alert alert-light clearfix">
    <button type="submit" class="btn btn-success float-right">
      <i class="fas fa-check"></i>
      Enregistrer les modifications
    </button>
  </div>

  {{ form_end(form) }}
</div>
<div class="alert alert-light">
  {% for picture in parc.pictures %}
  <div class="col mx-2 my-2" style="width: 100px;">
    <img
      src="{{ vich_uploader_asset(picture, 'imageFile') | imagine_filter('thumb') }}"
      width="100"
      alt=""
    />
    <form
      methods="post"
      action="{{ path('dash.picture.delete', { id: picture.id }) }}"
      style="display: inline-block"
    >
      <input type="hidden" name="_method" value="DELETE" />
      <button class="btn btn-danger">Supprimer</button>
    </form>
  </div>
  {% endfor %}
</div>
{% endblock %} 