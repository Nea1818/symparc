{% extends 'base.html.twig' %} {% block title %}Edition des annonces{% endblock
%} {% block body %} {% form_theme form _self %}

<div class="container">
  <h1 class="my-5">Modifier l'annonce: {{ parc.name }}</h1>

  {{ form_start(form) }}

  <div class="row">
    <div class="col">
      <div class="alert alert-light">
        <h2>Informations générales</h2>
        <hr />
        {{ form_row(form.name) }}
        {{ form_row(form.slug) }}
      </div>
    </div>
    <div class="col">
      <div class="alert alert-light">
        <h2>Images de l'annonce</h2>
        <hr />
        {# {{ form_row(form.coverImage) }} {{ form_row(form.images) }} #}
      </div>
      <div class="alert alert-light">
        <h2>Détails de l'annonce</h2>
        <hr />
        {{ form_row(form.introduction) }}
        {{ form_row(form.description) }}
      </div>
    </div>
  </div>

  <div class="alert alert-light clearfix">
    <button type="submit" class="btn btn-success float-right">
      <i class="fas fa-check"></i>
      Enregistrer les modifications
    </button>
  </div>

  {{ form_end(form) }}
</div>
